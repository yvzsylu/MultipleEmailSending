@model TopluMailProjesi.Models.Dokumanlar

@{
    ViewData["Title"] = "Create";
}



<h1>Belge ve Fotoğraf Yükle</h1>
<span >@TempData["mesaj"]</span>
<hr />
<div class="row">
    <div class="col-md-4">



        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="form-label" asp-for="Dosya" for="dosyaYukle">Dosya Yükleme:</label>
                <input asp-for="Dosya" type="file" class="form-control" id="dosyaYukle" />
                <span asp-validation-for="Dosya" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yükle" class="btn btn-primary" onloadstart="alert()" />
            </div>
            <div id="message"></div>
        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
<script>
    function alert() {
        
            var message = document.getElementById('message');

            message.classList = 'alert alert-success show fade';
            message.innerHTML = 'Dosya Eklenmiştir';



            var bsAlert = new bootstrap.Alert(message);


            setTimeout(function() {
                bsAlert.close();
            }, 10000);
        
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
